[Unit]
Description=libvirtexporter daemon
Documentation=man:libvirtexporter(1) 
After=network.target libvirtd.service 

[Service]
EnvironmentFile=/etc/default/libvirtprometheusexporter
ExecStart=/usr/bin/libvirtexporter $PORT_OPTS $QEMU_DIR
KillMode=process
Restart=on-failure
RestartPreventExitStatus=255
Type=simple
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
Alias=libvirtexporter.service
